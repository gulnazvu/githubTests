<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998"
        app:srcCompat="@drawable/kpklo" />

    <TextView
        android:id="@+id/psc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Public Safety Commission, KP"
        android:textColor="@color/greenkpk"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.875"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

    </TextView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:columnCount="2"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/psc">

        <ImageView
            android:id="@+id/registerComplaint"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/complasint" />

        <ImageView
            android:id="@+id/viewComplaint"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/view" />

        <ImageView
            android:id="@+id/aboutUs"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/aboutus" />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="150dp"
            android:layout_height="130dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            app:srcCompat="@drawable/profile" />
    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>